call pathogen#infect()

filetype indent plugin on
syntax on
set number
set backspace=indent,eol,start
set autoindent
set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab
set incsearch
set history=1000
set wildmenu
set wildmode=list:longest
set synmaxcol=0   " handles syntax highlighting for really long lines
set mouse-=a
